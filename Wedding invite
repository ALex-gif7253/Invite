  <script>
// script.js

// Wait for the page to load completely
window.addEventListener('load', () => {
  // Animation to join the puzzle pieces
  setTimeout(() => {
    document.getElementById('puzzle-container').classList.add('joined');
  }, 1000);
});

// Handle the RSVP form submission
document.getElementById('rsvp-form').addEventListener('submit', function (e) {
  e.preventDefault();
  
  const name = document.getElementById('name').value;
  const guests = document.getElementById('guests').value;
  
  // Simulate saving the RSVP data (here, just logging to console)
  console.log(`RSVP from: ${name}, Number of guests: ${guests}`);
  
  // Display confirmation message
  document.getElementById('rsvp-message').textContent = `Thank you, ${name}! Your RSVP is confirmed for ${guests} guests.`;
  
  // Optionally clear form fields after submission
  document.getElementById('rsvp-form').reset();
});

</script>
